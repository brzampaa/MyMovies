unit uSearch;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, REST.Types, REST.Client,
  Data.Bind.Components, Data.Bind.ObjectScope, Vcl.StdCtrls, Vcl.ExtCtrls;

type
  TfrmSearch = class(TForm)
    Edit1: TEdit;
    Button1: TButton;
    RESTRequest1: TRESTRequest;
    RESTClient1: TRESTClient;
    Image1: TImage;
    txtName: TEdit;
    Edit3: TEdit;
    txtRated: TEdit;
    txtReleaseDate: TEdit;
    lblTitle: TLabel;
    lblYear: TLabel;
    lblRated: TLabel;
    lblReleaseDate: TLabel;
    txtRunningTime: TEdit;
    lblRunningTime: TLabel;
    txtGenre: TEdit;
    lblGenre: TLabel;
    txtDirector: TEdit;
    lblDirector: TLabel;
    txtWriter: TEdit;
    lblWriter: TLabel;
    txtActors: TMemo;
    lblActors: TLabel;
    Memo1: TMemo;
    Label1: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  frmSearch: TfrmSearch;

implementation

{$R *.dfm}

procedure TfrmSearch.Button1Click(Sender: TObject);
begin
  RESTRequest1.AddParameter('t','avatar');
  RESTRequest1.Execute;
  Memo1.Text := RESTRequest1.Response.JSONValue.ToString;
end;

end.
